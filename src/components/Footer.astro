---
import siteConfig from '../data/site-config.json';
---
<footer style="background-color:white">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <span class="copyright">Copyright &copy; {siteConfig.copyright}</span>
      </div>
      <div class="col-md-4">
        <ul class="social-buttons list-inline">
          <li class="list-inline-item">
            <a href={`mailto:${siteConfig.webmasterEmail}`}><i class="fa-solid fa-envelope"></i></a>
          </li>
        </ul>
      </div>
      <div class="col-md-4">
        <a href="/release-notes" class="text-muted" style="font-size:0.85rem;">Release Notes</a>
      </div>
    </div>
  </div>
</footer>
