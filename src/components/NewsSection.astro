---
import NewsAccordion from './NewsAccordion.astro';
---
<section id="news" style="background-color:white">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">News</h2>
        <h3 class="section-subheading text-muted">Current Events Affecting Our Region</h3>
      </div>
    </div>

    <NewsAccordion />

    <div class="row mt-5">
      <div class="col-md-4 col-sm-6 portfolio-item">
        <a href="#newsModal1" class="portfolio-link" data-bs-toggle="modal">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fa-solid fa-plus fa-3x"></i>
            </div>
          </div>
          <img src="/img/news/news.jpg" class="img-fluid" alt="Chapter Updates" />
        </a>
        <div class="portfolio-caption">
          <h4>Chapter Updates</h4>
          <p class="text-muted">Latest Chapter News and Meeting Minutes</p>
        </div>
      </div>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <a href="#newsModal2" class="portfolio-link" data-bs-toggle="modal">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fa-solid fa-plus fa-3x"></i>
            </div>
          </div>
          <img src="/img/news/g500_72005_p1_taxi_001.jpg" class="img-fluid" alt="Aviation News" />
        </a>
        <div class="portfolio-caption">
          <h4>Aviation</h4>
          <p class="text-muted">News from the Aviation Industry</p>
        </div>
      </div>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <a href="#newsModal3" class="portfolio-link" data-bs-toggle="modal">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fa-solid fa-plus fa-3x"></i>
            </div>
          </div>
          <img src="/img/news/falconheavy2.jpg" class="img-fluid" alt="Space News" />
        </a>
        <div class="portfolio-caption">
          <h4>Space</h4>
          <p class="text-muted">News from the Space Industry</p>
        </div>
      </div>
    </div>
  </div>
</section>
