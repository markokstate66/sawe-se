---
import officers from '../data/officers.json';
---
<section id="officers" style="background-color:white">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Officers</h2>
        <h3 class="section-subheading text-muted">Our Current Leadership Team</h3>
      </div>
    </div>
    <div class="row">
      {officers.slice(0, 3).map(officer => (
        <div class="col-sm-4">
          <div class="team-member">
            <img src={officer.photo} class="img-fluid rounded-circle" alt={officer.name}
                 data-bs-toggle="tooltip" title={officer.tooltip} />
            <h4>{officer.name}</h4>
            <p class="text-muted">{officer.role}</p>
            <ul class="social-buttons list-inline">
              <li class="list-inline-item">
                <a href={`mailto:${officer.email}`}><i class="fa-solid fa-envelope"></i></a>
              </li>
              {officer.linkedin ? (
                <li class="list-inline-item">
                  <a href={officer.linkedin} target="_blank" rel="noopener"><i class="fa-brands fa-linkedin-in"></i></a>
                </li>
              ) : (
                <li class="list-inline-item">
                  <a href="#officers"><i class="fa-brands fa-linkedin-in"></i></a>
                </li>
              )}
            </ul>
          </div>
        </div>
      ))}
    </div>
    <div class="row">
      {officers.slice(3).map(officer => (
        <div class="col-sm-6">
          <div class="team-member">
            <img src={officer.photo} class="img-fluid rounded-circle" alt={officer.name}
                 data-bs-toggle="tooltip" title={officer.tooltip} />
            <h4>{officer.name}</h4>
            <p class="text-muted">{officer.role}</p>
            <ul class="social-buttons list-inline">
              <li class="list-inline-item">
                <a href={`mailto:${officer.email}`}><i class="fa-solid fa-envelope"></i></a>
              </li>
              {officer.linkedin ? (
                <li class="list-inline-item">
                  <a href={officer.linkedin} target="_blank" rel="noopener"><i class="fa-brands fa-linkedin-in"></i></a>
                </li>
              ) : (
                <li class="list-inline-item">
                  <a href="#officers"><i class="fa-brands fa-linkedin-in"></i></a>
                </li>
              )}
            </ul>
          </div>
        </div>
      ))}
    </div>
    <div class="row">
      <div class="col-lg-8 offset-lg-2 text-center">
        <p class="large text-muted">Please feel free to contact us about our chapter, our professional society, or mass properties in general using the email links provided or the Contact link below.  We welcome your input!</p>
      </div>
    </div>
  </div>
</section>
