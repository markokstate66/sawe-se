---
import TimelineItem from './TimelineItem.astro';
import timeline from '../data/timeline.json';
---
<section id="about" style="background-color:white">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">About</h2>
        <h3 class="section-subheading text-muted">Serving the Mass Properties Community in the Southeast United States Since 1982.</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <p style="font-size:1.1rem;"><a href="/documents/Welcome_to_SAWE_SER.pdf" target="_blank"><b>Presentation: Welcome to SAWE</b></a></p>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <hr class="rounded" />
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <ul class="timeline">
          {timeline.map(item => (
            <TimelineItem
              year={item.year}
              heading={item.heading}
              image={item.image}
              body={item.body}
              inverted={item.inverted}
            />
          ))}
          <li class="timeline-inverted">
            <div class="timeline-image">
              <h4>Be Part<br />Of Our<br />Story!</h4>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
