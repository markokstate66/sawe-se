---
import siteConfig from '../data/site-config.json';
---
<nav id="mainNav" class="navbar navbar-dark navbar-expand-lg navbar-custom fixed-top">
  <div class="container">
    <a class="navbar-brand" href="#page-top" style="font-family:Helvetica;"><b>SAWE Southeast Region</b></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      Menu <i class="fa-solid fa-bars"></i>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item"><a class="nav-link" href="#about"><b>About</b></a></li>
        <li class="nav-item"><a class="nav-link" href="#events"><b>Events</b></a></li>
        <li class="nav-item"><a class="nav-link" href="#news"><b>News</b></a></li>
        <li class="nav-item"><a class="nav-link" href="#membership"><b>Membership</b></a></li>
        <li class="nav-item"><a class="nav-link" href="#officers"><b>Officers</b></a></li>
        <li class="nav-item"><a class="nav-link" href="#contact"><b>Contact</b></a></li>
      </ul>
      <form class="view-cart" target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
        <input type="hidden" name="cmd" value="_s-xclick" />
        <input type="hidden" name="encrypted" value={siteConfig.paypalCartEncrypted} />
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_viewcart_LG.gif" name="submit" alt="PayPal - View Cart" />
      </form>
    </div>
  </div>
</nav>
