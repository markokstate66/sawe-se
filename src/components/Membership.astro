---
import membership from '../data/membership.json';
---
<section id="membership" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Membership</h2>
        <h3 class="section-subheading text-muted">Build your knowledge! Improve your skills! Advance your career!</h3>
      </div>
    </div>
    <div class="row text-center">
      {membership.map(item => (
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fa-solid fa-circle fa-stack-2x text-primary"></i>
            <a href={item.url} target="_blank" rel="noopener">
              <i class={`fa-solid ${item.icon} fa-stack-1x fa-inverse`}></i>
            </a>
          </span>
          <h4 class="service-heading">{item.heading}</h4>
          <p class="text-muted">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
